{
  "compilerOptions": {
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strictNullChecks": true,

    "declaration": true, 
    "declarationMap": true, 
    "sourceMap": true 
    
  },
  "include": ["./src/**/*"],
  "exclude": [
      "./dist/**/*"
    ],
  "ts-node": {
    "esm": true
  }
}
