{
  "name": "lido-local-devnet",
  "packageManager": "yarn@4.2.2",
  "private": true,
  "type": "module",
  "scripts": {
    "submodule": "git submodule update --init --remote --recursive",
    "postinstall": "yarn submodule",
    "build:modules": "yarn workspaces foreach -W run build",
    "build": "rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts && tsc --noEmit"
  },
  "workspaces": [
    "packages/*",
    "src"
  ],
  "dependencies": {
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@oclif/core": "^4.0.37",
    "@oclif/plugin-help": "^6.2.19",
    "@types/node": "^22.10.5",
    "dockerode": "^4.0.4",
    "ethers": "^6.13.4",
    "execa": "^9.5.2",
    "fastify": "^5.2.1",
    "kurtosis-sdk": "^1.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.34",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2"
  },
  "oclif": {
    "bin": "./bin/run.js",
    "commands": "./dist/commands",
    "dirname": "devnet",
    "topicSeparator": " ",
    "topics": {
      "network": {
        "description": "Manage EL (Execution) and CL (Consensus) nodes."
      },
      "blockscout": {
        "description": "Manage Dora, a Consensus Layer explorer."
      },
      "dora": {
        "description": "Manage Blockscout, a blockchain explorer."
      },
      "onchain": {
        "description": "Manage and deploy protocol smart contracts."
      },
      "onchain:lido": {
        "description": "Manage and deploy core smart contracts."
      }
    },
    "hooks": {}
  },
  "bin": {
    "devnet": "./bin/run.js"
  },
  "engines": {
    "node": ">=20"
  }
}
